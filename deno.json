{
  "name": "@tijs/roci-matrix",
  "version": "1.2.3",
  "exports": "./src/main.ts",
  "nodeModulesDir": "auto",
  "tasks": {
    "start": "deno run --allow-all src/main.ts",
    "dev": "deno run --allow-all --watch src/main.ts",
    "login": "deno run --allow-all login.ts",
    "test": "deno test --allow-all",
    "check": "deno check src/**/*.ts",
    "lint": "deno lint",
    "lint:comments": "! grep -r 'TODO\\|FIXME' src/ tests/ --include='*.ts' || (echo 'ERROR: TODO/FIXME comments are not allowed' && exit 1)",
    "fmt": "deno fmt"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.16",
    "@std/encoding": "jsr:@std/encoding@^1.0.10",
    "@std/testing": "jsr:@std/testing@^1.0.16",
    "matrix-bot-sdk": "npm:matrix-bot-sdk@^0.7.1",
    "@sentry/deno": "npm:@sentry/node@^8.0.0",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.0",
    "zod": "npm:zod@^3.24.1",
    "@roci/shared": "../roci-shared/src/mod.ts"
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["deno.window", "deno.ns"]
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "comment": "Note: TODO/FIXME comments are banned - use 'deno task lint:comments' to check",
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  }
}
